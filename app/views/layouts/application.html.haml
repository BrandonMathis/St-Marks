!!!html
=render '/refinery/html_tag'
=render '/refinery/head'
=render '/refinery/javascripts'

%body
  =render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        =render '/refinery/header'

  %header.subhead.jumbotron
    .container
      .row
        .span6
          %h1#site-title=link_to "St Marks United Methodist Church", '/'
        .span6
          .cross=image_tag image_path ('cross.png')

  #page.container
    =yield

  %footer.footer
    .container
      .quote
        %i"And let perseverance have its full effect, that you may be perfect and complete, lacking in nothing." - James 1:4
      #copy
        =render '/refinery/footer'
